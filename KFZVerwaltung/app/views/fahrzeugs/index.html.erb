<p id="notice"><%= notice %></p>

<h1>Fahrzeugs</h1>

<table>
  <thead>
    <tr>
      <th>Bezeichnung</th>
      <th>Kennzeichen</th>
      <th>Tuv</th>
      <th>Baujahr</th>
      <th>Notizen</th>
      <th>Archiviert</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fahrzeugs.each do |fahrzeug| %>
      <tr>
        <td><%= fahrzeug.bezeichnung %></td>
        <td><%= fahrzeug.kennzeichen %></td>
        <td><%= fahrzeug.tuv %></td>
        <td><%= fahrzeug.baujahr %></td>
        <td><%= fahrzeug.notizen %></td>
        <td><%= fahrzeug.archiviert %></td>
        <td><%= link_to 'Show', fahrzeug %></td>
        <td><%= link_to 'Edit', edit_fahrzeug_path(fahrzeug) %></td>
        <td><%= link_to 'Destroy', fahrzeug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

