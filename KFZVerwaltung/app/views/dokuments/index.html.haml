%body
  %p#notice= notice
  .navbody
    %header
      .nav
        %ul
          %li.home= link_to 'Fahrzeuge', fahrzeugs_path
          %li.tutorials= link_to 'Dokumente', dokuments_path
  %br/
  %br/
  %table
    %thead
      %tr
        %th Bezeichnung
        %th Fahrzeug
        %th Speicherdatum
        %th Typ
        %th{:colspan => "3"}
