%p#notice= notice
.navbody
  %header
    .nav
      %ul
        %li.home= link_to 'Fahrzeuge', fahrzeugs_path
        %li.tutorials= link_to 'Dokumente', dokuments_path

%br/
%br/

%table
  %thead
    %tr
      %th 
        Bezeichnung
        = link_to '<i class="fa fa-chevron-up" aria-hidden="true"></i>'.html_safe, dokuments_path(:sort => ' ASC', :col => :bezeichnung, :f => params[:f])
        = link_to '<i class="fa fa-chevron-down" aria-hidden="true"></i>'.html_safe, dokuments_path(:sort => ' DESC', :col => :bezeichnung, :f => params[:f])
      %th 
        Fahrzeug
        = link_to '<i class="fa fa-chevron-up" aria-hidden="true"></i>'.html_safe, dokuments_path(:sort => ' ASC', :col => :fahrzeug, :f => params[:f])
        = link_to '<i class="fa fa-chevron-down" aria-hidden="true"></i>'.html_safe, dokuments_path(:sort => ' DESC', :col => :fahrzeug, :f => params[:f])
      %th 
        Speicherdatum
        = link_to '<i class="fa fa-chevron-up" aria-hidden="true"></i>'.html_safe, dokuments_path(:sort => ' ASC', :col => :speicherdatum, :f => params[:f])
        = link_to '<i class="fa fa-chevron-down" aria-hidden="true"></i>'.html_safe, dokuments_path(:sort => ' DESC', :col => :speicherdatum, :f => params[:f])
      %th 
        Typ
        = link_to '<i class="fa fa-chevron-up" aria-hidden="true"></i>'.html_safe, dokuments_path(:sort => ' ASC', :col => :typ, :f => params[:f])
        = link_to '<i class="fa fa-chevron-down" aria-hidden="true"></i>'.html_safe, dokuments_path(:sort => ' DESC', :col => :typ, :f => params[:f])
      %th{:colspan => "3"}
  %tbody
    - @dokuments.each do |dokument|
      %tr
        %td= dokument.bezeichnung
        %td= link_to dokument.fahrzeug.bezeichnung, fahrzeug_url(dokument.fahrzeug.id)
        %td= dokument.speicherdatum
        %td= dokument.typ
        %td= link_to 'Anzeigen', dokument
        %td= link_to 'Bearbeiten', edit_dokument_path(dokument)
        %td= link_to 'LÃ¶schen', dokument, method: :delete, data: { confirm: 'Are you sure?' }
