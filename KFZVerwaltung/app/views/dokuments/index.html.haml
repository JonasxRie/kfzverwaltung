%br/

.container
  %table.table.table-striped
    %thead
      %tr
        %th 
          Bezeichnung
          = link_to '<i class="fa fa-chevron-up"></i>'.html_safe, dokuments_path(:sort => ' ASC', :col => :bezeichnung, :f => params[:f])
          = link_to '<i class="fa fa-chevron-down"></i>'.html_safe, dokuments_path(:sort => ' DESC', :col => :bezeichnung, :f => params[:f])
        %th 
          Fahrzeug
          = link_to '<i class="fa fa-chevron-up"></i>'.html_safe, dokuments_path(:sort => ' ASC', :col => :fahrzeug, :f => params[:f])
          = link_to '<i class="fa fa-chevron-down"></i>'.html_safe, dokuments_path(:sort => ' DESC', :col => :fahrzeug, :f => params[:f])
        %th 
          Speicherdatum
          = link_to '<i class="fa fa-chevron-up"></i>'.html_safe, dokuments_path(:sort => ' ASC', :col => :speicherdatum, :f => params[:f])
          = link_to '<i class="fa fa-chevron-down"></i>'.html_safe, dokuments_path(:sort => ' DESC', :col => :speicherdatum, :f => params[:f])
        %th 
          Typ
          = link_to '<i class="fa fa-chevron-up"></i>'.html_safe, dokuments_path(:sort => ' ASC', :col => :typ, :f => params[:f])
          = link_to '<i class="fa fa-chevron-down"></i>'.html_safe, dokuments_path(:sort => ' DESC', :col => :typ, :f => params[:f])
        %th{:colspan => "3"}
    %tbody
      - @dokuments.each do |dokument|
        %tr
          %td= dokument.bezeichnung
          %td= link_to dokument.fahrzeug.bezeichnung, fahrzeug_url(dokument.fahrzeug.id)
          %td= dokument.speicherdatum
          %td= dokument.typ
          %td= link_to '<i class="fa fa-info fa-lg"></i>'.html_safe, dokument
          %td= link_to '<i class="fa fa-pencil fa-lg"></i>'.html_safe, edit_dokument_path(dokument)
          %td= link_to '<i class="fa fa-trash fa-lg"></i>'.html_safe, dokument, method: :delete, data: { confirm: 'Wirklich l√∂schen?' }
  %br/
  .btn.btn-primary= link_to 'Neues Dokument', new_dokument_path
